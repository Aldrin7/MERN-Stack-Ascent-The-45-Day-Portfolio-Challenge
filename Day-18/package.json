{
  "name": "day-18-api-deployment",
  "version": "1.0.0",
  "description": "Day 18: API Deployment & Production - MERN Stack Ascent",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "build": "npm run build:docker",
    "build:docker": "docker build -t day-18-api .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest tests/e2e",
    "test:load": "artillery run tests/performance/load-test.yml",
    "deploy": "npm run build && npm run deploy:docker",
    "deploy:docker": "docker-compose up -d",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "health": "curl http://localhost:5000/api/health"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.8",
    "connect-redis": "^7.1.0",
    "express-session": "^1.17.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "nodemailer": "^6.9.7",
    "express-fileupload": "^1.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "pm2": "^5.3.0",
    "newrelic": "^11.0.0",
    "dd-trace": "^4.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "artillery": "^2.0.8",
    "nodemon": "^3.0.1",
    "eslint": "^8.55.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^8.15.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "api",
    "deployment",
    "production",
    "docker",
    "kubernetes",
    "monitoring",
    "logging",
    "security",
    "ci-cd",
    "mern"
  ],
  "author": "MERN Stack Ascent",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mern-stack-ascent.git"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"],
    "*.json": ["prettier --write"]
  }
}
